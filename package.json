{
  "name": "cb-todo",
  "version": "0.0.0",
  "description": "Declarative Full Stack TODO App",
  "main": "index.js",
  "scripts": {
    "test": "cross-env \"NODE_OPTIONS=--experimental-vm-modules\" jest",
    "watch": "nodemon --exec \"docker-compose up --build --remove-orphans -d\"",
    "copy-schema": "node scripts/json-schema-dereference.mjs ./schema.yaml ./terraform/app-schema.yaml ./lambda/src/api/app-schema.yaml"
  },
  "nodemonConfig": {
    "ignore": [
      "__tests__/*",
      "dynamodb/*",
      "mongo/*",
      "node_modules/*"
    ]
  },
  "workspaces": [
    "spa"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "9.0.9",
    "@aws-sdk/client-dynamodb": "3.67.0",
    "@aws-sdk/lib-dynamodb": "3.67.0",
    "ajv-formats": "2.1.1",
    "convert-json-schema-to-mongoose": "0.3.2",
    "lodash": "4.17.21",
    "mongoose": "6.2.10",
    "openapi-backend": "5.3.0",
    "uuid": "8.3.2",
    "yaml": "1.10.2"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "jest": "27.5.1",
    "nodemon": "2.0.15"
  },
  "jest": {
    "moduleFileExtensions": [
      "mjs",
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)",
      "**/__tests__/**/*.mjs",
      "**/?(*.)+(spec|test).mjs"
    ],
    "transform": {}
  }
}
